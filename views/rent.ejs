<%- include('layouts/navbar.ejs', { user: user }) %>

<main class="grid w-full grid-cols-2 gap-8 p-4">

  <div class="px-2 py-1 text-xl bg-white bg-opacity-50 border-2 border-black rounded-xl">
    <h2 class="font-bold">El libro:</h2>
    <div class="flex items-center gap-4 justify-evenly">
      <div class="flex flex-col w-full gap-2">
        <p class="bg-white input">Título: <%= book.title %></p>
        <p class="bg-white input">Autor: <%= book.author %></p>
        <p class="bg-white input">Publicación: <%= book.year %></p>
        <p class="bg-white input">Editorial: <%= book.publisher %></p>
        <p class="bg-white input">Precio: <%= book.price %>$</p>
        <p class="bg-white input">Periodo de alquiler: <%= book.period %></p>
        <p class="bg-white input">Categoria: <%= book.category || 'Sin especificar' %></p>
      </div>
      <img src="<%= book.cover_image %>" alt="<%= book.title %>" width="200" height="400" class="border-2 border-black">
    </div>
  </div>

  <div class="px-2 py-1 text-xl bg-white bg-opacity-50 border-2 border-black rounded-xl">
    <h2 class="font-bold">Pertenece a:</h2>
    <div class="flex items-center gap-4 justify-evenly">
      <div class="flex flex-col w-full gap-2">
        <p class="bg-white input">Usuario: <%= book.username %></p>
        <p class="bg-white input">Nombre: <%= book.firstname %> <%= book.lastname %></p>
        <p class="bg-white input">Email: <%= book.email %></p>
        <p class="bg-white input">Teléfono: <%= book.cellphone || 'Sin aclarar' %></p>
      </div>
      <img src="<%= book.profile_pic %>" alt="<%= book.username %>" width="200" height="200" class="border-2 border-black">
    </div>
    <div class="flex items-center w-full gap-4 px-2 text-xl">
      <h3>Estado:</h3>
      <% if (book.owner_username !== user.username && !book.consumer_username) { %>
      <form action="/books/rent/<%= book.id %>?_method=PUT" method="POST" class="">
        <button class="w-full px-2 py-1 font-bold text-center bg-green-500 border-2 border-black rounded-xl">Disponible, alquilar</button>
      </form>
      <% } else if (book.owner_username !== user.username && book.consumer_username) { %>
      <h3 class="px-2 py-1 font-bold text-center bg-red-500 border-2 border-black rounded-xl">Ya está alquilado</h3>
      <% } else if (book.owner_username === user.username) { %>
      <h3 class="px-2 py-1 text-center bg-orange-500 border-2 border-black rounded-xl">Mio</h3>
      <% } %>
    </div>
  </div>

  <div class="col-span-2 px-2 py-1 text-xl bg-white bg-opacity-50 border-2 border-black rounded-xl">
    <h2 class="font-bold">Comentarios:</h2>
    <div class="flex flex-col gap-4">
      <form class="flex flex-col gap-2" action="/comments/create" method="POST">
        <div class="flex items-center justify-between">
          <input class="font-bold bg-transparent outline-none w-max" readonly required name="username" value="<%= user.username %>">
          <button class="px-2 py-1 font-bold border border-black rounded-lg bg-sky-300 w-max">Enviar</button>
        </div>
        <textarea class="px-2 py-1 border-2 border-black rounded-lg outline-none" name="text" maxlength="255" required></textarea>
        <input type="hidden" value="<%= book.id %>" name="book_id" required>
      </form>
      <hr class="w-full border border-black">
      <% if (comments.length > 0) { %>
      <% comments.forEach(comment => { %>
      <div class="flex flex-col gap-2">
        <div class="flex gap-2">
          <h3 class="px-2 py-1 font-bold border-2 border-black rounded-lg"><%= comment.username %></h3>
          <p class="px-2 py-1 font-bold border-2 border-black rounded-lg"><%= comment.created_at %></p>
        </div>
        <p class="w-full px-2 py-1 bg-white border-2 border-black rounded-lg"><%= comment.text %></p>
      </div>
      <% }) %>
      <% } else { %>
      <h2>No hay comentarios...</h2>
      <% } %>
    </div>
  </div>

</main>